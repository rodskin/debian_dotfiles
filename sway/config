# Terminal scratchpad
for_window [instance="urxvt_scratchpad"] move to scratchpad, border none
bindsym $mod+Shift+t [instance="urxvt_scratchpad"] scratchpad show
exec xfce4-terminal -name urxvt_scratchpad

# htop scratchpad
for_window [instance="htop_scratchpad"] move to scratchpad, border none
bindsym $mod+Shift+p [instance="htop_scratchpad"] scratchpad show
exec xfce4-terminal -name htop_scratchpad -e htop

# Screen management
set $mode_display Config monitor resolution - Default config (d), Work (w), TV-Iliad (t), Home (h)
mode "$mode_display" {
    bindsym d exec --no-startup-id sh "$HOME/.config/X11/default.sh", mode "default"
    bindsym w exec --no-startup-id sh "$HOME/.config/X11/work.sh", mode "default"
    bindsym t exec --no-startup-id sh "$HOME/.config/X11/whiteboard.sh", mode "default"
    bindsym h exec --no-startup-id sh "$HOME/.config/X11/home.sh", mode "default"
    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+x mode "$mode_display"

